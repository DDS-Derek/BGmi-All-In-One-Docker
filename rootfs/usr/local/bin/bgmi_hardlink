#!/usr/bin/with-contenv bash
# shellcheck shell=bash

Green="\033[32m"
Red="\033[31m"
Yellow='\033[33m'
Font="\033[0m"
INFO="${Green}INFO${Font}"
ERROR="${Red}ERROR${Font}"
WARN="${Yellow}WARN${Font}"
Time=$(date +"%Y-%m-%d %T")
INFO(){
echo -e "${Time} ${INFO}    | ${1}"
}
ERROR(){
echo -e "${Time} ${ERROR}    | ${1}"
}
WARN(){
echo -e "${Time} ${WARN}    | ${1}"
}

INFO "Hardlink start"
umask ${UMASK}; LC_ALL=zh_CN.UTF-8 su-exec bgmi $(which python3) /home/bgmi-docker/hardlink/hardlink.py run
INFO "done"
